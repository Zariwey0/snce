{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if product.image is not null %}
                        <img src="{{ asset('uploads/images/' ~ product.image) }}" width="200"/>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    {% for tag in product.tags %}
                        {{ tag.name }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ product.createdat | date('d-m-Y') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_list') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
